<Window x:Class="Prog3B.FindingCallNumbers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prog3B"
        mc:Ignorable="d"
        Title="FindingCallNumbers" Height="450" Width="800" Background="Coral">
    <Grid>
        <Button x:Name="btnStart"  BorderBrush="Black" Background="LightBlue" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top" MinHeight="40" MinWidth="100" Margin="53,371,0,0" Click="btnStart_Click">New Game</Button>
        <Label x:Name="lblQheader" Content="Your description is:" HorizontalAlignment="Left" Margin="75,76,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnEnd"  BorderBrush="Black" Background="LightBlue" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top" MinHeight="40" MinWidth="100" Margin="610,376,0,0" Click="btnEnd_Click" >Next</Button>
        <Label x:Name="lblScore" Content="Your Score:" HorizontalAlignment="Center" Margin="0,334,0,0" VerticalAlignment="Top" Width="Auto"/>
        <Label x:Name="lblQ" Content="&#xD;&#xA;" FontSize="18" HorizontalAlignment="Left" Margin="75,107,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbOne" GroupName="RGroup" Content="RadioButton" HorizontalAlignment="Left" Margin="471,134,0,0" VerticalAlignment="Top" Checked="rbOne_Checked" Height="39" Width="253"/>
        <RadioButton x:Name="rbTwo" GroupName="RGroup" Content="RadioButton" Margin="471,177,0,0" VerticalAlignment="Top" Checked="rbTwo_Checked" HorizontalAlignment="Left" Width="227" Height="28"/>
        <RadioButton x:Name="rbThr" GroupName="RGroup" Content="RadioButton" HorizontalAlignment="Left" Margin="471,212,0,0" VerticalAlignment="Top" Checked="rbThr_Checked" Height="31" Width="214"/>
        <RadioButton x:Name="rbFou" GroupName="RGroup" Content="RadioButton" HorizontalAlignment="Left" Margin="469,251,0,0" VerticalAlignment="Top" Checked="rbFou_Checked" RenderTransformOrigin="0.5,0.5" Height="33" Width="244">
            <RadioButton.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.549"/>
                    <TranslateTransform/>
                </TransformGroup>
            </RadioButton.RenderTransform>
        </RadioButton>
        <Label x:Name="lblQheader_Copy" Content="Please select the correct option:&#xD;&#xA;" HorizontalAlignment="Left" Margin="471,76,0,0" VerticalAlignment="Top"/>

        <Button x:Name="Home"
                        Content="Home Page:"
                        BorderBrush="Black"
                        Background="LightBlue"
                        BorderThickness="2"
                        Margin="326,381,323,0"
                        VerticalAlignment="Top"
                        Grid.ColumnSpan="1" Height="47" Click="Home_Click" />
    </Grid>
</Window>


